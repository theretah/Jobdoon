@inject Microsoft.AspNetCore.Identity.UserManager<Jobdoon.Models.Entities.AppUser> userManager
@inject Jobdoon.DataAccess.UnitOfWork.IUnitOfWork unit
@{
    var user = userManager.GetUserAsync(User).Result;
    var opportunities = unit.Opportunities.Find(o => o.CompanyId == user.CompanyId).ToList();
}
<div class="container-fluid bg-light p-0">
    <div class="container">
        <nav class="navbar navbar-expand-lg">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Search">جستجو</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">درخواست های من</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Saved">نشان شده ها</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-9">
            <nav class="navbar navbar-expand-lg">
                <ul class="navbar-nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            همه
                            <span class="badge text-bg-secondary">0</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Sent">
                            ارسال شده
                            <span class="badge text-bg-secondary">0</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Reviewed">
                            بررسی شده
                            <span class="badge text-bg-secondary">0</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="InterviewAccepted">
                            تایید برای مصاحبه
                            <span class="badge text-bg-secondary">0</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Hired">
                            موافقت شده
                            <span class="badge text-bg-secondary">0</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Cancelled">
                            بسته شده
                            <span class="badge text-bg-secondary">0</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="container">
                @foreach (var o in opportunities)
                {
                    var province = unit.Provinces.Find(p => o.ProvinceId == p.Id).First();
                    var assignment = unit.Assignments.Find(p => o.AssignmentId == p.Id).First();
                    var minSalary = unit.MinimumSalaries.Find(p => o.MinimumSalaryId == p.Id).First();
                    <div class="card mb-3 me-3" style="max-width: 420px;">
                        <div class="row g-0">
                            <div class="card-body">
                                <h5 class="card-title">@o.Title</h5>
                                <p class="card-text">@province.Name</p>
                                <p class="card-text">@assignment.Title</p>
                                <p class="card-text">@((minSalary.Title) == null? $"از {minSalary.Amount:n0} تومان" : minSalary.Title)</p>
                                <form method="post" class="m-0 p-0">
                                    <button asp-controller="Employer" asp-action="CloseOpportunity"
                                            asp-route-opportunityId="@o.Id" class="btn btn-secondary">
                                        بستن
                                    </button>
                                    <button asp-controller="Employer" asp-action="EditOpportunity"
                                            asp-route-opportunityId="@o.Id" class="btn btn-secondary">
                                        ویرایش
                                    </button>
                                    <button asp-controller="Employer" asp-action="RemoveOpportunity"
                                            asp-route-opportunityId="@o.Id" class="btn btn-danger">
                                        حذف
                                    </button>
                                </form>
                                <br />
                                <p class="card-text float-end">
                                    <small class="text-muted">منتشر شده در @Jobdoon.Utilities.PersianCalendarUtilities.YearMonthDate(o.Date)</small>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>