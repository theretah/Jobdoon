<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jobdoon.styles.css" asp-append-version="true" />
</head>
@{
    var isAuthenticated = false;
}
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                خانه
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light">
                                تعرفه ها
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" class="nav-link text-light">
                                بخش کارجویان
                            </a>
                        </li>

                        @await Component.InvokeAsync("ENavbar", new {isAuthenticated = isAuthenticated})

                        <li class="nav-item">
                            <a class="nav-link text-secondary">
                                کارفرمایان
                            </a>
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand ms-3" asp-area="" asp-controller="Home" asp-action="Index">Jobdoon</a>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0 pb-5" >
        <main role="main">
            @RenderBody()
        </main>
    </div>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
