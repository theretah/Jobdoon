@using Jobdoon.Models.Entities;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<AppUser> userManager
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jobdoon.styles.css" asp-append-version="true" />
</head>
@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    AppUser user = new();
    if (isAuthenticated)
    {
        user = userManager.GetUserAsync(User).Result;
    }
}
<body class="mb-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary box-shadow">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z" />
                                </svg>
                                خانه
                            </a>
                        </li>
                        @await Component.InvokeAsync("Navbar", new { isAuthenticated = isAuthenticated, isEmployer = user.IsEmployer })
                    </ul>
                </div>
                <a class="navbar-brand ms-3" asp-area="" asp-controller="Home" asp-action="Index">Jobdoon</a>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container-fluid bg-dark">
            <div class="container">
                <table class="table table-borderless table-dark">
                    <thead>
                        <tr>
                            <th scope="col">کارجویان</th>
                            <th scope="col">کارفرمایان</th>
                            <th scope="col">جاب دون</th>
                            <th scope="col">شبکه های اجتماعی</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>سوالات متداول کارجویان</td>
                            <td>سوالات متداول کارفرمایان</td>
                            <td>تماس با ما</td>
