                                </svg>
                            </td>
                        </tr>
                        <tr>
                            <td>قوانین و مقررات کارجویان</td>
                            <td>قوانین و مقررات کارفرمایان</td>
                            <td>درباره ما</td>
                        </tr>
                        <tr>
                            <td>لیست مشاغل</td>
                            <td>درج آگهی استخدام</td>
                        </tr>
                        <tr>
                            <td>آگهی های استخدام</td>
                            <td>ورود به بخش کارفرمایان</td>
                        </tr>
                        <tr>
                            <td>
                                <a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none">ورود</a>
                                /
                                <a asp-area="Identity" asp-page="/Account/Register" class="text-decoration-none">ثبت نام کارجو</a>
                            </td>
                            <td>تعرفه انتشار آگهی</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
