@page
@model LoginModel

@{
    ViewData["Title"] = "ورورد کارجو | جاب دون";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <span class="h4">ورود کارجو</span>
                    <a asp-page="EmployerLogin" class="fw-bold text-decoration-none float-end">کارفرما هستید؟</a>
                    <hr />
                    <ul class="nav nav-tabs">
                        <li class="nav-item rounded">
                            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-light" aria-current="page">ثبت نام کارجو</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link bg-light fw-bold">ورود کارجو</a>
                        </li>
                    </ul>
                    <div class="bg-light rounded-bottom p-3 text-black">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">آدرس ایمیل</label>
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ایمیل خود را وارد کنید." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">رمز عبور</label>
                            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="رمز عبور خود را وارد کنید." />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="RememberMe" />
                                مرا به خاطر بسپر
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">وارد شوید</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2 px-5">
            <p class="fs-2">جاب دون چه کمکی به من می کنه؟</p>
            <br />
            <p class="fs-6">همین حالا در جاب دون ثبت‌نام کن و رزومه‌ات رو برای آگهی‌های استخدام شرکت‌های معتبر بفرست.</p>
            <br />
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                جستجوی در آگهی‌های استخدام ۹,۱۵۴ شرکت معتبر و ارسال رزومه با یک کلیک
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                دریافت فرصت‌های شغلی جدید مرتبط از طریق ایمیل (Job Alert)
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                رزومه‌ساز استاندارد
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                شناخت محیط کار و فرهنگ سازمانی شرکت‌های در حال استخدام
            </p>
