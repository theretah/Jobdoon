@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام کارجو | جاب دون";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>ایجاد حساب کاربری</h4>
                <hr />
                <ul class="nav nav-tabs">
                    <li class="nav-item rounded">
                        <a class="nav-link bg-light fw-bold" aria-current="page">ثبت نام کارجو</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-light">ورود کارجو</a>
                    </li>
                </ul>
                <div class="bg-light rounded-bottom p-3 text-black">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label ">آدرس ایمیل</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="آدرس ایمیل خود را وارد کنید." />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">نام و نام خانوادگی</label>
                        <input asp-for="FullName" class="form-control" autocomplete="fullname" aria-required="true" placeholder="مثلا محمدرضا طاهر" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">انتخاب رمز عبور</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="رمز عبور خود را وارد نمایید." />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">تکرار رمز عبور</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="رمز عبور خود را تکرار نمایید." />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">ثبت نام</button>
                </div>
            </form>
        </div>
        <div class="col-md-6 col-md-offset-2 px-5">
            <p class="fs-2">جاب دون چه کمکی به من می کنه؟</p>
            <br />
            <p class="fs-6">همین حالا در جاب دون ثبت‌نام کن و رزومه‌ات رو برای آگهی‌های استخدام شرکت‌های معتبر بفرست.</p>
            <br />
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                جستجوی در آگهی‌های استخدام ۹,۱۵۴ شرکت معتبر و ارسال رزومه با یک کلیک
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                دریافت فرصت‌های شغلی جدید مرتبط از طریق ایمیل (Job Alert)
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                رزومه‌ساز استاندارد
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z" />
                </svg>
                شناخت محیط کار و فرهنگ سازمانی شرکت‌های در حال استخدام
            </p>
